        # color class      border  backgr. text
        focused_workspace  #1C1C23 #1C1C23 #8AAEB8
        active_workspace   #92A7B2 #92A7B2 #8AAEB8
        inactive_workspace #1C1C23 #1C1C23 #313246
        urgent_workspace   #800517 #800517 #cb4b16
    }
}

